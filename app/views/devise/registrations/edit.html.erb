
<div class="container">
    
    <ul>
        <li><%= link_to("アカウント",edit_user_registration_path,class:"active") %></li>
        <li><%= link_to("プロフィール",profile_edit_path) %></li>
    </ul>


  <div class="profile_container">
    <div class="profile_box">

    <h2>アカウント編集</h2>

          <% if @user.img? %>
              <%= image_tag @user.img.url ,class: "icon"%>
          <% else %>
              <%= image_tag "default.png" ,class: "icon" %>
          <% end %>

<% if flash.notice %>
  <p class="notice"><%= flash.notice%></p>
<%end%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <hr size="1px" color="#bbb">
  <div class="field">
    <%= f.label :name ,class:"profile_label"%><br />
    <%= f.text_field :name, autofocus: true ,class:"profile_textfield"%>
  </div>

  <hr size="1px" color="#bbb">
  <div class="field">
    <%= f.label :email ,class:"profile_label"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"profile_textfield"%>
  </div>

  <hr size="1px" color="#bbb">
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <div class="field">
    <%= f.label :password ,class:"profile_label"%>
    <%= f.password_field :password, autocomplete: "new-password" ,class:"profile_textfield"%>
     <i>(<%= @minimum_password_length %>文字以上、変更なしの場合は空白)</i>
  </div>

<hr size="1px" color="#bbb">
  <div class="field">
    <%= f.label :password_confirmation ,class:"profile_label"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"profile_textfield"%>
  </div>
  <hr size="1px" color="#bbb">
  <div class="field">
    <%= f.label :current_password ,class:"profile_label"%> 
    <%= f.password_field :current_password, autocomplete: "current-password" ,class:"profile_textfield"%>
    <i>(確認のため現在のパスワードを入力)</i>
  </div>
  <hr size="1px" color="#bbb">
  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<h3>アカウント削除はこちら</h3>

<p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "戻る", :back %>

</div>

     
  </div>
  </div>
</div>

</div>
<div class="create">

<h2>新規登録</h2>
<div class="create_form">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="signup_field">
    <%= f.label :name ,class:"profile_label"%><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class:"signup_textfield" %>
  </div>

  <div class="signup_field">
    <%= f.label :email ,class:"profile_label"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"signup_textfield"%>
  </div>

  <div class="signup_field">
    <%= f.label :password ,class:"profile_label"%>
    <% if @minimum_password_length %>
    <% end %>
    <%# <div class="signup_em"> %>
      <%= f.password_field :password, autocomplete: "new-password" ,class:"signup_textfield"%>
    <%# </div> %>
  </div>

  <div class="signup_field">
    <%= f.label :password_confirmation ,class:"profile_label"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"signup_textfield" %>
  </div>
      <br><em>※パスワードは<%= @minimum_password_length %>文字以上</em>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>


</div>
</div>

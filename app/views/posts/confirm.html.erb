<div class="create">

  <h4>予約確認画面</h4>
  <%= render "shared/error", obj: @post %>

  <div class="create_form">

      <%= form_for @post do |f| %>
          <div class="form-group">

            <hr size=".5px" color="#bbb">

              <div class="confirm">
                <%= f.text_field :room_id ,class:"profile_textfield form-control",readonly: true %>
                <%= f.text_field :room_image ,class:"profile_textfield form-control",readonly: true %>
                <%= f.text_field :room_introduction ,class:"profile_textfield form-control",readonly: true %>
              </div>

              <%= f.label :room_name %>
              <%= f.text_field :room_name ,class:"profile_textfield form-control",readonly: true %>

              <%= f.label :startday%>
              <%= f.date_field :startday ,class:"profile_textfield form-control",readonly: true %>

              <%= f.label :endday%>
              <%= f.date_field :endday ,class:"profile_textfield form-control",readonly: true %>

              <%= f.label :peoples%>
              <%= f.text_field :peoples ,class:"profile_textfield form-control",readonly: true %>

              <%= f.label :fee %>
              <%= f.text_field :fee ,class:"profile_textfield form-control",readonly: true %>
            

            </div>

        <div class="actions">
          <%= f.submit "予約する" %>
        </div>

          <div class="back_btn" >
            <%= link_to "戻る", :back %>
          </div>
      <% end %>
  </div>
</div>
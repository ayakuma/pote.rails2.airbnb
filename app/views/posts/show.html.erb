<div class="create">

  <h4>予約完了画面</h4>
  <hr size=".5px" color="#bbb">
  <%= render "shared/error", obj: @post %>

  <div class="create_form">

          <div class="form-group">
            <br>
            <div class="posts_tbody">
            <% if @post.room_image? %>
              <%= link_to"/rooms/#{@post.room_id}" do %>
                <%= image_tag @post.room_image, class:"room_show_img" %>
              <% end %>
              <% else %>
              <%= link_to"/rooms/#{@post.room_id}" do %>
                <%= image_tag '/default.png', class:"room_show_img"%>
              <% end %>
              <% end %><br><br>
            ルーム名：<%= link_to @post.room_name,"/rooms/#{@post.room_id}"%> <br><br>
            </div>
            予約名：<%=  @post.user.name %>様 <br><br>
            チェックイン：<%= @post.startday %><br><br>
            チェックアウト：<%= @post.endday %><br><br>
            人数：<%= @post.peoples %>名様<br><br>
            合計金額：<%= @post.fee %>円<br><br>
            </div>

            <div class="edit_btn">
              <%= link_to("予約一覧へ",posts_path)%>
            </div>

  </div>
</div>
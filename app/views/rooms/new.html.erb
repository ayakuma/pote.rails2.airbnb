<div class="create">
  <h4>ルーム登録ページ</h4>

  <div class="create_form">
  <%= render "shared/error", obj: @room %>

  <%= form_for @room do |f| %>
    <div class="signup_field">
      <%= f.label :name ,class:"profile_label"%>
      <%= f.text_field :name ,class:"form-control signup_textfield ", placeholder:"必須"%>
    </div>

    <div class="signup_field">
      <%= f.label :address,class:"profile_label" %>
      <%= f.text_field :address,class:"form-control signup_textfield",placeholder:"必須" %>
    </div>

    <div class="signup_field">
      <%= f.label :price ,class:"profile_label"%>
      <%= f.text_field :price,class:"form-control signup_textfield",placeholder:"必須" %>
    </div>

    <div class="signup_field">
      <%= f.label :introduction,class:"profile_label" %>
      <%= f.text_area :introduction ,class:"form-control signup_textfield",placeholder:"必須"%>
    </div>

    <div class="signup_field">
      <%= f.label :image,class:"profile_label" %>
      <%= f.file_field :image,class:"form-control signup_textfield" %>
    </div>

    <h6>※全て入力必須</h6>
    
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  </div>
</div>

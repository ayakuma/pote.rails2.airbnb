<div class="room_show">
  <h1 fontsize="14">ルーム詳細・予約画面</h1>

  <div class="d-flex flex-wrap">

    <div class="col-sm-8 ">
      <div class="card mb-8">

        <% if @room.image? %>
          <%= image_tag @room.image.url ,class:"room_show_img" %>
        <% else %>
          <%= image_tag '/default.png', class:"room_show_img"%>
        <% end %>
        <%# <%= image_tag @room.image.url :height=>'300',class:"room_show_img" %> 

        <div class="card-body">
          <div class="card_title">
            <% if current_user.img? %>
              <%= link_to user_path(@room.user) do %>
              <div class="roomuser_page">
                <%= image_tag @room.user.img.url, :height=>"40", class:"usericon" %><br>
                <%= @room.user.name %>
              </div>
              <% end %>
            <% else %>
              <div class="room.user_page">
                <%= link_to user_path(@room.user) do %>
                  <%= image_tag "default.png" ,:height=>"40" , class:"usericon" %>
                  <%= @room.user.name %>
                <% end %>
              </div>
            <% end %>
            <div class="room_show_name">
              <h4 class="card-title"><%= @room.name %></h5>
              <font size="2",class="card-text",fornsize="2"><%= @room.address %></font><br>
            </div>
          </div>
          <hr size=".5px" color="#bbb">
          <p class="card-text">  <%= simple_format @room.introduction %></p>
        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="room_show_container">
      <%# ここから予約画面へ飛ばすフォーム %>
        <%= form_for @room do |f| %>
        <%= form_for current_user, url: {action: 'profile_update'} do |f| %>
        <form>
          <h5>
            <%= number_to_currency(@room.price, :unit => "円") %> / 日
          </h5>
            <hr size=".5px" color="#bbb">
          <div class="form-group">
            <label for="exampleInputEmail1">開始日</label>
            <input type="date" class="form-control" id="exampleInputstartday" aria-describedby="emailHelp" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">終了日</label>
            <input type="date" class="form-control" id="exampleInputendday" placeholder="Password">
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <%# ここまで予約画面へ飛ばすフォーム %>


        <% if @room.user.id == current_user.id %>
          <%= link_to"編集", edit_room_path(@room) ,class:"btn btn-primary"%>
          <%= link_to"削除", room_path(@room), method: :delete ,data:{confirm:"削除しますか？"},class:"btn btn-primary"%>
        <% end %>


      </div>
    </div>
  </div>
</div>


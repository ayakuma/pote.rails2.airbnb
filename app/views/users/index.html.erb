<h1>管理者画面：ユーザー一覧</h1>


<table> 
    <thead>
        <tr>
            <th>ID</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>パスワード</th>
            <th>アイコン画像</th>
            <th>自己紹介</th>
            <th>作成日</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.pass %></td>
                <td><%= user.img %></td>
                <td><%= user.introduction %></td>
                <td><%= user.created_at.to_s(:datetime_jp) %></td>
                
                <td><%= link_to("確認","/users/#{user.id}") %></td>                
                <td><%= link_to "削除", method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>
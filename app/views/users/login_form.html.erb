<% if flash.notice %>
  <p class="notice"><%= flash.notice%></p>
<%end%>

<% if @error_message %>
    <%= @error_message %>
<% end %>


<%= form_tag("/login") do %>
  <p>メールアドレス</p>
  <input name="email" value="<%= @email %>">
  <p>パスワード</p>
  <input type="password" name="pass" value="<%= @pass %>">
  <input type="submit" value="ログイン">
<% end %>

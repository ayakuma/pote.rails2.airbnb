<div class="create">
    <h3>新しいアカウントを作成</h3>
    <div class="create_form">
    <%= form_tag("/users/create") do %>
    <div class="side">
        <p>必須</p>
        <input  name="name" type="text" placeholder="ユーザー名" class="create_input" >
    </div>
    <div class="side">
        <p>必須</p>
        <input  name="email" type="text" placeholder="メールアドレス" class="create_input">
    </div>
    <div class="side">
        <p>必須</p>
        <input  name="pass" type="text" placeholder="パスワード" class="create_input">
    </div>
    <div class="side">
        <p>必須</p>
        <input  name="pass" type="text" placeholder="パスワード確認" class="create_input">
    </div>
        <input type="submit" value="新規登録" class="create_btn">
    <% end %>
    <%= link_to("既にアカウントをお持ちの方はログイン","/", class:"login") %>
    </div>
</div>